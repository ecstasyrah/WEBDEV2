    background-color: rgb(208, 197, 240);
    margin: 250px;
    font-weight: 500;
    font-size: x-large;
}

.search{
    padding: 10px;
    border-radius: 5px;
    font-size: x-large;
    margin: 50px;
}

.boxin{
    display: flex;
    flex-direction: row;

}

.bee{
    background-color: rgb(206, 179, 199);
    border-radius: 25px;
    border: 2px;
    margin: 10px;
    padding: 50px;
    border: solid black;
    color: black;
}

.input{
    color: black;
}

.bs{
    display: flex;
    align-items: center;
    justify-content: center;
}
